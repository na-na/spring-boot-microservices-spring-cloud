	<script type="text/javascript">
		$(document).ready(function() {
			$(".js-example-basic-single").select2();
			$('#dropdown_selector').change(function() {
				var option = $(this).find('option:selected').attr("title") ;
				$('#showoption').val(option);
			});
		});
	</script>
	<form action="#" th:action="@{/compinfo}" th:object="${record}"
		method="post">

		<select id="dropdown_selector" class="js-example-basic-single"
			th:field="*{companyDomain}">
			<option th:each="item : ${companyList}" th:value="${item.domain}" th:title="${item.name}"  
				th:text="${item.name}">Company Name</option>
		</select>
		<p>
			<label>You have selected:</label> <input type="text" name="name" id="showoption"
				disabled="disabled"></input>
				
		</p>
	</form>
