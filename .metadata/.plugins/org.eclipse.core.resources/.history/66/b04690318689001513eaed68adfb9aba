	<script>
		$(document).ready(function() {
			$(".nav-tabs a").click(function() {
				$(this).tab('show');
			});
			$('.progress-bar').each(function() {
				var text =  $(this).attr('aria-valuenow').substring(0, 1);
				var now = Math.abs($(this).attr('aria-valuenow') * 100);
				if (text == "-") {
					$(this).addClass("progress-bar-danger");
				}
				$(this).css('width', now + '%');
			});
		});
	</script>

