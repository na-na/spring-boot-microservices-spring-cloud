<!DOCTYPE HTML>
<html>
<head>
<meta charset="utf-8" />
<title>CorpInfo</title>
<link
	href="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/css/select2.min.css"
	rel="stylesheet" />
<link rel="stylesheet"
	href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" />
<script
	src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script
	src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/js/select2.min.js"></script>
</head>

<body>
	<script type="text/javascript">
		$(document).ready(function() {
			$(".js-example-basic-single").select2();
			$('#dropdown_selector').change(function() {
				var option = $(this).find('option:selected').attr("title") + ", " + $(this).find('option:selected').attr("companyTicker");
				$('#showoption').val(option);
			});
		});
	</script>
	<div class="container">
		<div class="jumbotron">
			<h1>CorpInfo Portal</h1>
		</div>

		<form action="#" th:action="@{/compinfo}" th:object="${record}"
			method="post">
			<div class="form-group">
				<select id="dropdown_selector" class="js-example-basic-single"
					th:field="*{companyDomain}" style="width: 280px">
					<option th:each="item : ${companyList}" th:value="${item.domain}" th:title="${item.name}" th:if="${item.ticker!=null}" data-th-attr="companyTicker=${item.ticker}"
				th:text="${item.name}">Company Name</option>
				</select>
			</div>
			<div class="form-group">
				<p>
					<label>You have selected:</label> <input class="form-control"
						type="text" name="name" id="showoption"></input>

				</p>
			</div>
			<div class="form-group">
				<p>
					<input class="btn btn-primary btn-lg" type="submit" value="Submit" />
				</p>
			</div>
		</form>
	</div>
</body>
</html>









