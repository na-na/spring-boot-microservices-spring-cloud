	<script>
		$(document).ready(function() {
			$(".nav-tabs a").click(function() {
				$(this).tab('show');
			});
			$('.progress-bar').each(function() {

				var now = Math.abs($(this).attr('aria-valuenow') * 100);

				$(this).css('width', now + '%');
			});
		});
	</script>

